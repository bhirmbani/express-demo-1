<% include ../layout/header %>

  <body>

    <% include client_menubar %>

    <div class="container">
      <h1 class="page-header">Deposit</h1>

      <div class="form-group">
        <a href="/client/deposit/create"><button class="btn btn-primary">Add Deposit</button></a>
      </div>

      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>Balance</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% trxes.forEach(trx => { %>
            <tr>
              <td><%= trx.id %></td>
              <td><%= helper.toCurrency(trx.balance) %></td>
              <td>
                <span class="btn <%= helper.statusDeposit(trx.status).btn %> btn-xs ">
                  <%= helper.statusDeposit(trx.status).status %>
                </span>
              </td>
              <td><%= helper.simpleDate(trx.createdAt) %></td>
              <td>
                <a href="/client/deposit/edit/<%= trx.id %>" class="btn btn-primary btn-sm glyphicon glyphicon-pencil"></a>
                <a href="/client/deposit/delete/<%= trx.id %>" class="btn btn-danger btn-sm glyphicon glyphicon-trash" onclick="return confirm('Delete?')"></a>
                <a href="/client/deposit/confirm/<%= trx.id %>" class="btn btn-success btn-sm glyphicon glyphicon-ok" onclick="return confirm('Confirm?')"></a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
